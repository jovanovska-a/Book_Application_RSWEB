@model IEnumerable<Review>
@{
    ViewData["Title"] = "List of Reviews";
}
@if(Model.Count()==0)
{
    <h1>There are no reviews for this book</h1>

}
else{
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.AppUser)</th>
                    <th>@Html.DisplayNameFor(model => model.Comment)</th>
                    <th>@Html.DisplayNameFor(model => model.Rating)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.AppUser)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Comment)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Rating)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Reviews" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square">Edit</i></a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash">Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="text-white" style="position: fixed; right: 30px; bottom: 30px;">
    <a asp-controller="Reviews" asp-action="Create" asp-route-id="@Model.FirstOrDefault().BookId" class="btn btn-success">
        <i class="bg-info bi-plus-circle">Add New</i>
    </a>
</div>
}