<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - e_shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/e_shop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body style="background-color: beige;">
    <header style="background-color: darkslategrey; font-size: 17px; padding: 5px;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Books" asp-action="Index" style="font-size: 22px; text-decoration: underline; color: antiquewhite;">.BookStore</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse">
                        <ul class="navbar-nav">
                            <li class="navbar-nav">
                            <a style="color: antiquewhite;" class="nav-link" asp-controller="Books" asp-action="Index"><i class="bi bi-shop-window"></i> Books</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a style="color: antiquewhite;"class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" id="navbarDropdown" role="button" data-toggle="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="bi bi-gear"></i> Additional
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-controller="Authors" asp-action="Index"><i class="bi bi-feather"> Authors</i></a>
                                    <a class="dropdown-item" asp-controller="Genres" asp-action="Index"><i class="bi bi-emoji-laughing"> Genres</i></a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                @if(User.Identity.IsAuthenticated)
                {
                <div style="display: flex; width: 30%;">
                    @if(User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link" style="color: antiquewhite; text-decoration: none; margin-right: 10px;" asp-action="Index" asp-controller="UserBooks"><i class="bi bi-book"></i> My Books </a>
                        <form asp-area="" asp-controller="Account" asp-action="Logout">
                            <button class="btn btn-danger" style="margin-right: 10px;">Log out</button>
                        </form>
                    }
                </div>
                }
                else
                {
                    <div style="display: flex; width: 22%;">
                    <a class="nav-link btn btn-outline-secondary" style="color: antiquewhite; text-decoration: none; margin-right: 10px;" asp-action="Register" asp-controller="Account">Register </a>
                        <a class="nav-link btn btn-success" style="color: antiquewhite; text-decoration: none; margin-right: 10px;" asp-action="Login" asp-controller="Account">Login </a>
                    </div>
                }
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
