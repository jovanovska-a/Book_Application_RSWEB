@using WebApplication1.viewModel
@model CreateBooksViewModel
@{
    ViewData["Title"] = "Add a new Book";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Book</h1>
        </p>
    </div>
    <div class="row">
        <div class="col-md-8 offset-2">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-asp-validation-summary="ModeOnly" class="text-danger"></div>
                <div class="form-group text-center">
                    <img id="FrontPageId" style="max-width: 100px" />
                </div>
                <div class="form-group">
                    <label asp-for="FrontPage" class="control-label"></label>
                    <input asp-for="FrontPage" type="file" class="form-control" />
                    <span asp-validation-for="FrontPage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="YearPublished" class="control-label"></label>
                    <input asp-for="YearPublished" class="form-control" />
                    <span asp-validation-for="YearPublished" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AuthorId">Chose author</label>
                    <select asp-for="AuthorId" class="form-control">
                        <option selected="selected">--Select--</option>
                        @foreach (var author in Model.Author)
                        {
                            <option value="@author.Id">@author.FirstName @author.LastName</option>
                        }
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GenreIds">Genres:</label>
                    <select asp-for="GenreIds" class="form-control">
                        @foreach (var genre in Model.Genres)
                        {
                            <option value="@genre.Id">@genre.GenreName</option>
                        }
                    </select>
                    <span asp-validation-for="GenreIds" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumPages" class="control-label"></label>
                    <input asp-for="NumPages" class="form-control" />
                    <span asp-validation-for="NumPages" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Publisher" class="control-label"></label>
                    <input asp-for="Publisher" class="form-control" />
                    <span asp-validation-for="Publisher" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DownloadUrl" class="control-label"></label>
                    <input asp-for="DownloadUrl" class="form-control" />
                    <span asp-validation-for="DownloadUrl" class="text-danger"></span>
                </div>
                <div class="form-gorup">
                    <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("FrontPageId");
            output.src = $("#FrontPage").val();
        })
        $("#FrontPage").on("change", function () {
            var output=document.getElementById('FrontPageId');
            output.src=$(this).val();
        })
    </script>
}